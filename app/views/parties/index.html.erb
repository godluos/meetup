<p id="notice"><%= notice %></p>

<h1>Parties</h1>
<div class="col-md-12">
  <div class="party">
    <%= link_to("New party", new_party_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
       <td>Creator </td>
      </tr>
    </thead>
    <tbody>
      <% @parties.each do |party| %>
        <tr>
          <td>#</td>
          <td><%= link_to(party.title, party_path(party)) %></td>
          <td><%= party.description %></td>
        <td> <%= party.user.email %> </td>
          <td>
              <%= link_to("Edit", edit_party_path(party), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", party_path(party),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

