<p id="notice"><%= notice %></p>
<div class="col-md-12">
  <div class="party">
    <%= link_to("Edit", edit_party_path(@party), class: "btn btn-primary pull-right")%>
    <%= link_to("Write a Post", new_party_post_path(@party), class: "btn btn-default pull-right")%>
  </div>
  <h2><%= @party.title %></h2>
  <p><%= @party.description %></p>
  <table class="table">
     <thead>
      <tr>
         <th>文章内容</th>
         <th>发表者</th>
         <th>发表时间</th>
       </tr>
     </thead>
     <tbody>
       <% @posts.each do |post| %>
         <tr>
           <td><%= post.content %></td>
           <td><%= post.user.email %></td>
           <td><%= post.created_at %></td>
         </tr>
       <% end %>
     </tbody>
   </table>
</div>
